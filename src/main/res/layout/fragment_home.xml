<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/menu_home"
            android:icon="@drawable/ic_menu_home" />


        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabMyRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/my_requests"
            android:icon="@drawable/ic_icon_myrequests" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabActionItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_items"
            android:icon="@drawable/ic_icon_notifications" />
    </com.google.android.material.tabs.TabLayout>


</LinearLayout>